<div align="center" class="page-header">

<%= link_to "Create new", new_casting_path, class: "btn btn-success"%>

  
<%= link_to "Find to me", new_casting_path, class: "btn btn-success"%>

  
<%= link_to "Ramdom", new_casting_path, class: "btn btn-success"%>

  
<%= link_to "All", new_casting_path, class: "btn btn-success"%>


</div>


<br>
<br>




<div  class="container-castings">


<% @castinges.each do |casting| %>

  <div class="col-sm-3 col-md-5">
    <div class="thumbnail">

     <% if current_model.name_all == casting.model.name_all %>

    <span class="admin">

       <%= link_to "Editar", edit_casting_path(casting)%>
       <%= link_to "Borrar", casting, method: :delete, data: {confirm: "Estas seguro que quieres borrarlo?"} %>
    </span>
  

<% end %>

    <span class="label label-default">OFFLINE</span>
      <img src="http://www.genesislevel.com/uploads/2/7/4/4/27443071/_5569004_orig.jpg" alt=""> 
      <div class="caption">

      
        <h3><strong><%=  casting.model.name_all %> </strong></h3>
        <p><p><%= casting.contenido %></p></p>
        <p><a href="#" class="btn btn-primary" role="button">Aplicar</a> <a href="#" class="btn btn-default" role="button">Ver mas</a></p>
        <%= link_to "Hace " + time_ago_in_words(casting.created_at), casting %>
      </div>
    </div>
  </div>



    







</div>


<% end %>






p id="notice"><%= notice %></p>

<h1>Listing Castings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Payment type</th>
      <th>Ubication</th>
      <th>Casting end</th>
      <th>Video</th>
      <th>Images</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @castings.each do |casting| %>
      <tr>
        <td><%= casting.title %></td>
        <td><%= casting.description %></td>
        <td><%= casting.payment_type %></td>
        <td><%= casting.ubication %></td>
        <td><%= casting.casting_end %></td>
        <td><%= casting.video %></td>
        <td><%= casting.images %></td>
        <td><%= casting.member_id %></td>
        <td><%= link_to 'Show', casting %></td>
        <td><%= link_to 'Edit', edit_casting_path(casting) %></td>
        <td><%= link_to 'Destroy', casting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

