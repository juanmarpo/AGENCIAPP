<!DOCTYPE html>
<html>
<head>
  <title>AGENCIAPP</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<%= link_to 'AGENCIAPP', root_path , :class => "navbar-brand" %>

    <!--   // Lista de opciones, en el navbar, horizontales. // -->


			 <ul class="nav navbar-nav pull-left">    	
        <% if model_signed_in? %>

			     <li class="inactive"><%= link_to "Status", timeline_path %></li>
           <% end %>
       </ul>


    <!--   // Links al lado derecho // -->


       		<ul class="nav navbar-nav pull-right">

          <!--   // Profile  // -->

       			<% if model_signed_in? %>
       				<li><%= link_to current_model.name_all,  edit_model_registration_path %></li>

                  <!--   // Exit // -->

       				<li><%= link_to 'Cerrar Sesion', salir_path, method: :delete %></li>


                    <!--   // Sign Up // -->

       			<% else %>
       				<li><%= link_to 'Registro',   registro_path %></li>


                        <!--   // Sign in // -->

       				<li><%= link_to 'Inicio de sesion', ingreso_path %></li>
       			<% end %>
       		</ul>
		</div>

</div>



<div class="container">

    <!--   // MENSAJES DE LA PAGINA (alertas y notices) // -->


   <% flash.each do |type, message|%>
   <div class="alert <%= flash_class type %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
        <%= message %>

   </div>

   <% end %>




    <!--   // CONTENIDO, DENTRO DE LA CLASE CSS CONTAINER// -->
          <%= yield %>

</div>




</body>
</html>
