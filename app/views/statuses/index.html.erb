<div class="page-header">
  
<h1 style=" text-align: center;  ">Ultimos castings</h1>

</div>

<div  class="container-statuses">

<%= link_to "Crear nuevo post", new_status_path, class: "btn btn-success"%>

<% @statuses.each do |status| %>




<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="http://www.genesislevel.com/uploads/2/7/4/4/27443071/_5569004_orig.jpg" alt="">
      <div class="caption">

      
        <h3><strong><%=  status.model.name_all %> </strong></h3>
        <p><p><%= status.contenido %></p></p>
        <p><a href="#" class="btn btn-primary" role="button">Aplicar</a> <a href="#" class="btn btn-default" role="button">Ver mas</a></p>
        <%= link_to "Hace " + time_ago_in_words(status.created_at), status %>
      </div>
    </div>
  </div>
</div>


    



 <% if current_model.name_all == status.model.name_all %>

    <span class="admin">

       <%= link_to "Editar", edit_status_path(status)%>
       <%= link_to "Borrar", status, method: :delete, data: {confirm: "Estas seguro que quieres borrarlo?"} %>
    </span>
  

<% end %>




</div>


<% end %>
